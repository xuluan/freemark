<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div>  <%= f.email_field :email, placeholder: "Email", class: "input-large"  %></div>

  <div>  <%= f.password_field :password, placeholder:"Password", class: "input-large"  %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="fm-remember-me"><%= f.check_box :remember_me %> <%= f.label :remember_me %> </div>
  <% end -%>

  <div><%= f.submit "Sign in", class: "fm-btn-signup"   %></div>
<% end %>

<%= render "devise/shared/links" %>
