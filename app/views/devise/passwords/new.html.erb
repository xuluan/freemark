<% content_for :container, "fm-container-setup" %>

<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div>  <%= f.email_field :email, placeholder: "Email", class: "fm-input-pwd-forgot"%></div>

  <div><%= f.submit "Send me reset password instructions", class: "fm-btn-pwd-forgot" %></div>
<% end %>

<%= render "devise/shared/links" %>
