<% content_for :container, "fm-container-setup" %>

<h2>Change your password</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div> <%= f.password_field :password, placeholder:"New Password", class: "input-large" %></div>

  <div> <%= f.password_field :password_confirmation, placeholder:"Confirm new Password", class: "input-large" %> </div>

  <div><%= f.submit "Change my password", class: "fm-btn-pwd-reset"%></div>
<% end %>

<%= render "devise/shared/links" %>
